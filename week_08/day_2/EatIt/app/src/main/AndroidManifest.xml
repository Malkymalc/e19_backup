<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codeclan.com.eatit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AllFoodsDetailActivity"
            android:label="@string/title_activity_food_detail" />

        <activity
            android:name=".AllMealsDetailActivity"
            android:label="@string/title_activity_meal_detail" />
        <activity
            android:name=".AllEatsActivity"
            android:label="@string/title_activity_all_eats"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddEatsActivity"
            android:label="@string/title_activity_add_eats"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".DataActivity" />

        <activity
            android:name=".LogActivity"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>