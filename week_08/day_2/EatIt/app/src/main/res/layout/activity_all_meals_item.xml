<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/meal_name"
        android:layout_width="167dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="meal name  " />

    <Button
        android:id="@+id/meal_eat_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:onClick="onEatClick"
        android:text="Eat"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/meal_name"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/meal_detail_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onDetailsClick"
        android:text="details"
        android:textColor="@android:color/background_dark"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/meal_eat_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meal_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_name"
        tools:text="summary" />
</android.support.constraint.ConstraintLayout>